{
  "name": "spotify",
  "version": "0.0.0",
  "description": "A Spotify API wrapper for Node.js",
  "homepage": "https://github.com/aerilym",
  "bugs": "https://github.com/aerilym",
  "funding": "https://github.com/aerilym",
  "license": "ISC",
  "author": "Ryan Miller <aerilymbiz@gmail.com> (https://aerilym.com)",
  "repository": "aerilym/aerilym",
  "keywords": [
    "spotify",
    "api",
    "client",
    "typescript",
    "web api",
    "wrapper",
    "music",
    "spotify api"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "lint": "eslint . --ext .ts",
    "format": "prettier --config .prettierrc src/**/*.ts --write",
    "build": "run-s clean:build && tsc -p tsconfig.module.json",
    "pretest": "node --loader ts-node/esm --experimental-specifier-resolution=node scripts/pretest --usertest",
    "test": "jest",
    "test:ci": "run-s clean:coverage pretest && jest | tee ./coverage/coverage.txt",
    "user-auth": "node --loader ts-node/esm --experimental-specifier-resolution=node scripts/user-auth",
    "docs": "run-s clean:docs-publish clean:docs-tmp docs:readme docs:home docs:publish clean:docs-tmp",
    "docs:publish": "typedoc src/index.ts --out docs/v1 --readme none",
    "docs:readme": "typedoc src/index.ts --out docs/tmp/ && cp -r docs/tmp/assets docs/assets",
    "docs:home": "node --loader ts-node/esm --experimental-specifier-resolution=node scripts/docs-home",
    "clean": "run-s clean:build clean:docs-publish clean:docs-tmp clean:coverage",
    "clean:build": "rm -rf dist/*",
    "clean:docs-publish": "rm -rf docs/v1/",
    "clean:docs-tmp": "rm -rf docs/tmp/",
    "clean:coverage": "rm -rf coverage/*",
    "prepublishOnly": "run-s test",
    "preversion": "run-s lint test"
  },
  "devDependencies": {
    "@tsconfig/node16": "^1.0.3",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.12",
    "@types/inquirer": "^9.0.2",
    "@types/jest": "^29.2.0",
    "@types/node": "^18.7.16",
    "@types/node-fetch": "^2.6.2",
    "@types/spotify-api": "^0.0.19",
    "@typescript-eslint/eslint-plugin": "^5.36.2",
    "@typescript-eslint/parser": "^5.36.2",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jsdoc": "^39.3.25",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-tsdoc": "^0.2.17",
    "execa": "^6.1.0",
    "express": "^4.18.2",
    "inquirer": "^9.1.4",
    "jest": "^29.2.2",
    "jest-junit": "^14.0.1",
    "node-fetch": "2",
    "node-html-parser": "^6.1.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typedoc": "^0.23.18",
    "typescript": "^4.8.3"
  },
  "dependencies": {
    "cross-fetch": "^3.1.5"
  }
}
