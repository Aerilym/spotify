{
  "name": "spotify",
  "version": "0.0.0",
  "description": "A Spotify API wrapper for Node.js",
  "homepage": "https://github.com/aerilym",
  "bugs": "https://github.com/aerilym",
  "funding": "https://github.com/aerilym",
  "license": "ISC",
  "author": "Ryan Miller <aerilymbiz@gmail.com> (https://aerilym.com)",
  "repository": "aerilym/aerilym",
  "keywords": [
    "spotify",
    "api",
    "client",
    "typescript",
    "web api",
    "wrapper",
    "music",
    "spotify api"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "lint": "eslint . --ext .ts",
    "format": "prettier --config .prettierrc src/**/*.ts --write",
    "build": "run-s clean:build && tsc -p tsconfig.module.json",
    "test": "node --loader ts-node/esm --experimental-specifier-resolution=node scripts/tester && jest",
    "test:user": "node --loader ts-node/esm --experimental-specifier-resolution=node scripts/tester --usertest && jest",
    "test:build": "run-s build && node --loader ts-node/esm --experimental-specifier-resolution=node scripts/tester && jest",
    "user-auth": "node --loader ts-node/esm --experimental-specifier-resolution=node scripts/user-auth",
    "docs": "run-s clean:docs && typedoc src/index.ts --out docs/v1 --excludePrivate --excludeProtected",
    "docs:json": "typedoc clean:docs --json docs/v1/spec.json --excludeExternals --excludePrivate --excludeProtected src/index.ts",
    "auth": "node --loader ts-node/esm --experimental-specifier-resolution=node test/web/auth",
    "clean": "run-s clean:build clean:docs clean:coverage",
    "clean:build": "rm -rf dist/*",
    "clean:docs": "rm -rf docs/v1/",
    "clean:coverage": "rm -rf docs/v1/",
    "prepublishOnly": "run-s test:build",
    "preversion": "run-s lint test:build"
  },
  "devDependencies": {
    "@tsconfig/node16": "^1.0.3",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.12",
    "@types/inquirer": "^9.0.2",
    "@types/jest": "^29.2.0",
    "@types/node": "^18.7.16",
    "@types/node-fetch": "^2.6.2",
    "@types/spotify-api": "^0.0.19",
    "@typescript-eslint/eslint-plugin": "^5.36.2",
    "@typescript-eslint/parser": "^5.36.2",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jsdoc": "^39.3.25",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-tsdoc": "^0.2.17",
    "execa": "^6.1.0",
    "express": "^4.18.2",
    "inquirer": "^9.1.4",
    "jest": "^29.2.2",
    "node-fetch": "2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typedoc": "^0.23.18",
    "typescript": "^4.8.3"
  },
  "dependencies": {
    "cross-fetch": "^3.1.5"
  }
}
